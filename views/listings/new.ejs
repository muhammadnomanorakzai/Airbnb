<% layout("/layout/boilerplate") -%>

<body class="bg-light">
  <div class="container my-5">
    <div
      class="card shadow-lg border-0 rounded-4 mx-auto p-4"
      style="max-width: 600px">
      <h2 class="text-center text-success fw-bold mb-4">Create New Listing</h2>

      <form
        method="POST"
        action="/listings"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data">
        <!-- Title -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Title</label>
          <input
            type="text"
            name="listing[title]"
            class="form-control rounded-3 shadow-sm"
            placeholder="Enter your title"
            required />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Description</label>
          <textarea
            name="listing[description]"
            class="form-control rounded-3 shadow-sm"
            rows="4"
            placeholder="Write a short description"
            required></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <!-- Image URL -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Upload Image</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control rounded-3 shadow-sm" />
        </div>

        <!-- Price -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Price (PKR)</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control rounded-3 shadow-sm"
            placeholder="Enter price"
            min="0"
            required />
          <div class="invalid-feedback">Please provide a valid Price.</div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control rounded-3 shadow-sm"
            placeholder="Enter location"
            required />
          <div class="invalid-feedback">Please provide a valid city.</div>
        </div>

        <!-- Country -->
        <div class="mb-4">
          <label class="form-label fw-semibold">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control rounded-3 shadow-sm"
            placeholder="Enter country"
            required />
          <div class="invalid-feedback">Please provide a valid country.</div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between align-items-center">
          <a href="/listings" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left"></i> Back
          </a>
          <button class="btn btn-success px-5 fw-semibold">
            <i class="bi bi-plus-circle"></i> Add Listing
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
<style>
  /* Smooth card hover */
  .card {
    transition: all 0.3s ease;
  }
  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  /* Input focus styling */
  .form-control:focus {
    border-color: #198754;
    box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
  }

  button:hover {
    transform: scale(1.05);
    transition: 0.2s ease;
  }
</style>
